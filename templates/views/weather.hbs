<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>
    {{>navbar}}

    <!-- main header  -->
    <div class="main_header">

        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="container-fluid  main_content">

                    <form class="temp_form ">

                        <input type="text" id="cityName" placeholder="Enter the city name..." autocomplete="off">
                        <br>
                        <input type="submit" value="search" id="submitBtn">
                        <p id="temp_err"></p>
                    </form>

                    <div class="tempInformation  ">
                        <div class="top_layer">
                            <div class="day" id="day">day</div>
                            
                        </div>
                        <div class="main_layer ">
                            <p id="city_name">The temperature will pop up here... </p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                                <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <!-- footer -->

    <footer>
        <p>
            &#169 Jaz Weather App  
        </p>
    </footer>

    

    <script>

        const getCurrentDay = () => {
          let weekday = new Array(7);
          weekday[0] = "Sun";
          weekday[1] = "Mon";
          weekday[2] = "Tue";
          weekday[3] = "Wed";
          weekday[4] = "Thu";
          weekday[5] = "Fri";
          weekday[6] = "Sat";
          
          let currentTime = new Date();
          days = weekday[currentTime.getDay()];
          let day = document.getElementById('day');

          day.innerText = days;
        };
        
        getCurrentDay();


    </script>
    <script src="js/config.js"></script>
    <script src="js/main.js"></script>
</body>

</html>